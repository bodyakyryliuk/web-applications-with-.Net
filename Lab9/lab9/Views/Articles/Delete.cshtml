@model lab9.Models.Article

@{
    ViewBag.Title = "Delete Article";
}

<h2>Delete Article</h2>

<div>
    <h3>Are you sure you want to delete this article?</h3>
    <p>Name: @Model.Name</p>
    <p>Category: @Model.Category</p>
    <p>Expiration Date: @Model.ExpirationDate.ToShortDateString()</p>
</div>

@using (Html.BeginForm("Delete", "Articles", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <input type="submit" value="Delete" />
}